<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout android:background="@drawable/background"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <ScrollView android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_alignParentTop="true"
              android:layout_alignParentStart="true">
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
      <TextView android:textSize="30.0sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170.0dp"
                android:text="Login"
                android:fontFamily="@font/lora" />
      <EditText android:id="@id/login_email"
                android:background="@drawable/edit_text_back"
                android:padding="8.0dp"
                android:layout_width="fill_parent"
                android:layout_height="60.0dp"
                android:layout_marginLeft="30.0dp"
                android:layout_marginTop="250.0dp"
                android:layout_marginRight="30.0dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/email"
                android:fontFamily="@font/lora"
                android:layout_alignParentStart="true"
                android:backgroundTint="#39ffffff" />
      <EditText android:id="@id/login_password"
                android:background="@drawable/edit_text_back"
                android:padding="8.0dp"
                android:layout_width="fill_parent"
                android:layout_height="60.0dp"
                android:layout_marginLeft="30.0dp"
                android:layout_marginTop="10.0dp"
                android:layout_marginRight="30.0dp"
                android:hint="Password"
                android:layout_below="@id/login_email"
                android:inputType="textPassword"
                android:drawableStart="@drawable/password"
                android:fontFamily="@font/lora"
                android:layout_alignParentStart="true"
                android:backgroundTint="#39ffffff" />
      <TextView android:textSize="17.0sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@id/forgetp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dp"
                android:text="Forget Password?"
                android:layout_below="@id/login_password"
                android:fontFamily="@font/lora"
                android:textAlignment="center"
                android:layout_marginStart="210.0dp"
                android:layout_marginEnd="23.0dp" />
      <androidx.appcompat.widget.AppCompatButton android:textSize="24.0sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/background_light"
                            android:id="@id/login_button"
                            android:background="@color/black"
                            android:padding="4.0dp"
                            android:layout_width="fill_parent"
                            android:layout_height="50.0dp"
                            android:layout_marginLeft="30.0dp"
                            android:layout_marginTop="15.0dp"
                            android:layout_marginRight="30.0dp"
                            android:text="Login"
                            android:layout_below="@id/forgetp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/lora" />
      <TextView android:textSize="17.0sp"
                android:textColor="@color/white"
                android:id="@id/needs_new_account"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50.0dp"
                android:text="Dont have an Account? Register here"
                android:layout_below="@id/login_button"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/lora"
                android:textAlignment="center"
                android:layout_marginStart="15.0dp"
                android:layout_marginEnd="23.0dp" />
    </RelativeLayout>
  </ScrollView>
</LinearLayout>