<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:background="#f1eded"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:background="@color/dark_blue"
                android:layout_width="fill_parent"
                android:layout_height="60.0dp">
    <TextView android:textSize="25.0sp"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:gravity="center"
              android:layout_gravity="center"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Profile"
              android:fontFamily="@font/lora" />
  </LinearLayout>
  <LinearLayout android:orientation="horizontal"
                android:id="@id/linearLayout"
                android:background="@color/light_blue"
                android:layout_width="fill_parent"
                android:layout_height="120.0dp"
                android:layout_marginTop="100.0dp">
    <de.hdodenhof.circleimageview.CircleImageView android:layout_gravity="center_horizontal"
                          android:id="@id/avatartv"
                          android:padding="5.0dp"
                          android:layout_width="120.0dp"
                          android:layout_height="120.0dp"
                          android:src="@drawable/profile_image"
                          android:layout_marginStart="20.0dp" />
    <LinearLayout android:orientation="vertical"
                  android:background="@color/light_blue"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
      <TextView android:textSize="25.0sp"
                android:textColor="@color/black"
                android:id="@id/nametv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dp"
                android:layout_marginTop="5.0dp"
                android:text="username"
                android:fontFamily="@font/lora"
                android:layout_marginStart="5.0dp" />
      <TextView android:textColor="@color/black"
                android:id="@id/emailtv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dp"
                android:text="Email"
                android:fontFamily="@font/lora_italic"
                android:layout_marginStart="5.0dp" />
    </LinearLayout>
  </LinearLayout>
  <com.google.android.material.floatingactionbutton.FloatingActionButton android:id="@id/fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dp"
                        android:src="@drawable/edit_profile"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="@color/light_blue" />
</RelativeLayout>