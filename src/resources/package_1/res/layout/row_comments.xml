<?xml version='1.0' encoding='utf-8' ?>
<androidx.cardview.widget.CardView android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_margin="1.0dp"
                      civeforum:cardBackgroundColor="@color/white"
                      civeforum:contentPadding="2.0dp" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:civeforum="http://schemas.android.com/apk/res-auto">
  <RelativeLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView android:id="@id/loadcomment"
                          android:layout_width="40.0dp"
                          android:layout_height="40.0dp"
                          android:layout_marginRight="5.0dp"
                          android:src="@drawable/profile_image"
                          android:layout_marginEnd="5.0dp" />
    <TextView android:textSize="16.0sp"
              android:textStyle="bold"
              android:textColor="@color/black"
              android:id="@id/commentname"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Tino"
              android:layout_toRightOf="@id/loadcomment"
              android:fontFamily="@font/lora" />
    <TextView android:textColor="@color/black"
              android:id="@id/commenttext"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Comment"
              android:layout_toRightOf="@id/loadcomment"
              android:layout_below="@id/commentname"
              android:fontFamily="@font/lora"
              android:layout_toEndOf="@id/loadcomment" />
    <TextView android:textSize="12.0sp"
              android:textColor="@color/dark_blue_bar"
              android:id="@id/commenttime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="23/05/21"
              android:layout_toRightOf="@id/loadcomment"
              android:layout_below="@id/commenttext"
              android:layout_toEndOf="@id/loadcomment" />
  </RelativeLayout>
</androidx.cardview.widget.CardView>