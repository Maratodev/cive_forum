<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:background="@drawable/background"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:textSize="30.0sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170.0dp"
            android:text="Create Account"
            android:fontFamily="@font/lora" />
  <EditText android:id="@id/register_name"
            android:background="@drawable/edit_text_back"
            android:padding="8.0dp"
            android:layout_width="fill_parent"
            android:layout_height="60.0dp"
            android:layout_marginLeft="30.0dp"
            android:layout_marginTop="250.0dp"
            android:layout_marginRight="30.0dp"
            android:hint="Username"
            android:inputType="text"
            android:drawableStart="@drawable/profile"
            android:fontFamily="@font/lora"
            android:layout_alignParentStart="true"
            android:backgroundTint="#39ffffff" />
  <EditText android:id="@id/register_email"
            android:background="@drawable/edit_text_back"
            android:padding="8.0dp"
            android:layout_width="fill_parent"
            android:layout_height="60.0dp"
            android:layout_marginLeft="30.0dp"
            android:layout_marginTop="10.0dp"
            android:layout_marginRight="30.0dp"
            android:hint="Email"
            android:layout_below="@id/register_name"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/email"
            android:fontFamily="@font/lora"
            android:layout_alignParentStart="true"
            android:backgroundTint="#39ffffff" />
  <EditText android:id="@id/register_password"
            android:background="@drawable/edit_text_back"
            android:padding="8.0dp"
            android:layout_width="fill_parent"
            android:layout_height="60.0dp"
            android:layout_marginLeft="30.0dp"
            android:layout_marginTop="10.0dp"
            android:layout_marginRight="30.0dp"
            android:hint="Password"
            android:layout_below="@id/register_email"
            android:inputType="textPassword"
            android:drawableStart="@drawable/password"
            android:fontFamily="@font/lora"
            android:layout_alignParentStart="true"
            android:backgroundTint="#39ffffff" />
  <androidx.appcompat.widget.AppCompatButton android:textSize="20.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@id/register_button"
                        android:background="@color/black"
                        android:padding="4.0dp"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dp"
                        android:layout_marginLeft="30.0dp"
                        android:layout_marginTop="30.0dp"
                        android:layout_marginRight="30.0dp"
                        android:text="Register"
                        android:layout_below="@id/register_password"
                        android:textAllCaps="false"
                        android:fontFamily="@font/lora" />
</RelativeLayout>