<?xml version='1.0' encoding='utf-8' ?>
<RelativeLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:civeforum="http://schemas.android.com/apk/res-auto">
  <androidx.core.widget.NestedScrollView android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_above="@id/commentsa">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
      <androidx.cardview.widget.CardView android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            civeforum:cardBackgroundColor="@color/white"
                            civeforum:cardCornerRadius="3.0dp"
                            civeforum:cardElevation="3.0dp"
                            civeforum:cardUseCompatPadding="true"
                            civeforum:contentPadding="5.0dp">
        <LinearLayout android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content">
          <LinearLayout android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@id/profilelayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView android:id="@id/pictureco"
                                  android:layout_width="50.0dp"
                                  android:layout_height="50.0dp"
                                  android:src="@drawable/profile_image"
                                  android:scaleType="centerCrop" />
            <LinearLayout android:orientation="vertical"
                          android:layout_width="0.0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1.0">
              <TextView android:textSize="20.0sp"
                        android:textColor="@color/black"
                        android:id="@id/unameco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:fontFamily="@font/lora" />
              <TextView android:textSize="12.0sp"
                        android:id="@id/utimeco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33 min"
                        android:fontFamily="@font/lora" />
            </LinearLayout>
            <ImageButton android:id="@id/morebtn"
                         android:background="@null"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/ic_more" />
          </LinearLayout>
          <TextView android:textSize="16.0sp"
                    android:textStyle="bold"
                    android:id="@id/ptitleco"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:fontFamily="@font/lora" />
          <TextView android:textColor="@color/black"
                    android:id="@id/descriptco"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:fontFamily="@font/lora" />
          <View android:background="#f5f0f0"
                android:layout_width="fill_parent"
                android:layout_height="1.0dp" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>
      <TextView android:textColor="@color/dark_blue"
                android:padding="2.0dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Discussion"
                android:drawablePadding="5.0dp"
                android:drawableStart="@drawable/ic_commenting"
                android:fontFamily="@font/lora" />
      <androidx.recyclerview.widget.RecyclerView android:id="@id/recyclecomment"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
    </LinearLayout>
  </androidx.core.widget.NestedScrollView>
  <RelativeLayout android:id="@id/commentsa"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true">
    <de.hdodenhof.circleimageview.CircleImageView android:id="@id/commentimge"
                          android:layout_width="50.0dp"
                          android:layout_height="50.0dp"
                          android:src="@drawable/profile_image" />
    <EditText android:id="@id/typecommet"
              android:background="@color/white"
              android:padding="15.0dp"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="Participate.."
              android:layout_weight="1.0"
              android:inputType="textCapSentences|textMultiLine"
              android:fontFamily="@font/lora"
              android:layout_toStartOf="@id/sendcomment"
              android:layout_toEndOf="@id/commentimge" />
    <ImageButton android:id="@id/sendcomment"
                 android:background="@color/white"
                 android:layout_width="40.0dp"
                 android:layout_height="40.0dp"
                 android:src="@drawable/send_message"
                 android:layout_alignParentRight="true"
                 civeforum:tint="@color/dark_blue" />
  </RelativeLayout>
</RelativeLayout>